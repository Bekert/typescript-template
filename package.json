{
	"name": "typescript-template",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.ts",
	"scripts": {
		"commit": "cz",
		"pre-commit": "lint-staged",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"eslint:check": "eslint .",
		"lint": "npm run eslint:check && npm run prettier:check",
		"lint:fix": "npm run eslint:check && npm run prettier:fix",
		"prepare": "husky",
		"start": "npm run compile && node ./dist/index.js",
		"dev": "tsx watch --no-warnings=ExperimentalWarning ./src/index.ts",
		"compile": "rm -rf ./built && tsc"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,html}": "prettier --write",
		"*.{js,jsx,ts,tsx}": "eslint"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.0",
		"@commitlint/config-conventional": "^19.6.0",
		"@eslint/js": "^9.16.0",
		"@stylistic/eslint-plugin": "^2.11.0",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.16.0",
		"globals": "^15.12.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"prettier": "^3.4.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/Bekert/typescript-template"
	},
	"author": "Bekert",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Bekert/typescript-template/issues"
	},
	"homepage": "https://github.com/Bekert/typescript-template"
}
